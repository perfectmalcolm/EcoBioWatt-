generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  role      String
  activities Activity[]
}

model Activity {
  id        Int    @id @default(autoincrement())
  message   String
  createdAt DateTime @default(now())
  userId    Int
  user      User   @relation(fields: [userId], references: [id])
}

model EnergyLog {
  id        Int      @id @default(autoincrement())
  value     Float
  timestamp DateTime @default(now())
}

model Efficiency {
  id        Int      @id @default(autoincrement())
  score     Float
  timestamp DateTime @default(now())
}

model Revenue {
  id        Int      @id @default(autoincrement())
  amount    Float
  timestamp DateTime @default(now())
}

model SystemHealth {
  id        Int      @id @default(autoincrement())
  status    String
  cpuUsage  Float
  memory    Float
  storage   Float
  timestamp DateTime @default(now())
}
model EnergyData {
  id             Int      @id @default(autoincrement())
  date           DateTime
  energyProduced Float
  efficiency     Float
  revenue        Float
}

